<% if params[:action] == "home" && user_signed_in? == false %>
<% else %>

    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
      <%= link_to root_path, class: "navbar-brand" do %>
        <i class="fas fa-landmark"></i>
        <% end %>
      <% unless params[:action] == "home" %>
        <%= form_tag results_deputies_path, class:"d-flex form-navbar", method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            id: "location-search",
          placeholder: "Tapez votre adresse..."
        %>
          <%= submit_tag "Search", class: "btn btn-primary ml-2" %>
        <% end %>
      <% end %>


      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>

            <li class="nav-item dropdown">
              <%# <p>Mes députés</p> %>
              <p class="dropdown-toggle clickable" id="navbarDropdown" data-toggle="dropdown" aria-expanded="false">
                Mes députés
              </p>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <% @deputies.each do |deputy| %>
                  <div class="dropdown-item">
                    <%= link_to deputy_path(deputy), class: "link" do %>
                      <%= image_tag "#{deputy.img}", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                      <p><%= deputy.first_name %> <%= deputy.last_name %></p>
                    <% end %>
                    <%= link_to unfollow_deputy_path(deputy) do %>
                      <i class="fas fa-user-slash"></i>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
<% end %>
