
  <div class="d-flex flex-column align-items-center mb-4"> 
    <h1 class="pb-3 pt-5">Bonjour <%= @user.email %></h1>
    <h2 class="pb-4">Les députés que vous suivez</h2>
  </div>
  <div class="d-flex justify-content-center dashboard-container ">
    <% @deputies.each do |deputy| %>
      <div class="deputy-card flex-column justify-content-between d-flex col-lg-2 col-md-6 col-sm-11 mx-3 px-0">
        <div class="avatar-container pt-4">
          <img src="<%= deputy.img %>" alt="" class="avatar-bordered">
          <h3><%= deputy.first_name %> <%= deputy.last_name %></h3>
        </div>
        
        <%= link_to unfollow_deputy_path(deputy), class: 'button button-danger width-grow' do %>
          Ne plus suivre
        <% end %>
      </div>
    <% end %>
  </div>
