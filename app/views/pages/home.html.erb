
<div class="container d-flex justify-content-center d-flex align-items-center vh-100">
 
  <div class="col-8">
    <div class="d-flex flex-column align-items-center mb-4">
      <h1>MonDéputé</h1>
      <h2>Découvrez qui est votre élu</h2>
    </div>
    <%= form_tag results_deputies_path, class:"d-flex", method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        id: "location-search",
        placeholder: "Rechercher une commune, un code postal, un député..."
      %>
      <%= submit_tag "Search", class: "btn btn-primary ml-2" %>
    <% end %>
  
  </div>
</div>